<h1>Users</h1>

<%= form_tag update_users_path(@event), method: :put, :class => 'form-search' do %>
    <%= select_tag 'users[]', options_from_collection_for_select(@all_users_except_current, :id, :email, @users.ids),
                   multiple: true, size: '10%', class: 'form-control' %>

    <%= submit_tag 'Add users', class: 'btn btn-success add-users-btn' %>
<% end %>

<%= link_to 'Back', events_path %>
